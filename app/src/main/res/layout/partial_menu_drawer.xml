<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="me.gunna.exemploteste.androidapp.viewmodel.HomeScreenViewModel"/>
    </data>
<LinearLayout
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:clickable="true"
    android:layout_gravity="start"
    android:fitsSystemWindows="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.onClickPokemon()}"
        android:padding="16dp"
        android:text="@string/pokemons"

        android:textColor="@android:color/white"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.onClickPokedex()}"
        android:padding="16dp"
        android:text="@string/poked_x"

        android:textColor="@android:color/white"
        android:textSize="16sp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.onClickBerries()}"
        android:padding="16dp"
        android:text="@string/berries"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@android:color/white"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="@{() -> viewModel.onClickMoves()}"
        android:padding="16dp"
        android:text="@string/moves"
        android:textColor="@android:color/white"
        android:textSize="16sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"/>



</LinearLayout>

</layout>
